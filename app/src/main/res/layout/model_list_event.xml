<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    android:id="@+id/card"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="#ffff">


<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:foreground="#60000000"/>

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ZOUKisoara Events, Timisoara, Romania"
                    android:lines="1"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:background="#80000000"
                    android:layout_gravity="bottom"
                    android:padding="8dp"
                    android:drawableLeft="@drawable/ic_place_black"
                    android:drawablePadding="8dp"/>

            </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2nd ZOUKisoara Brazilian Zouk dance festival, Timisoara, Romania"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:maxLines="2"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:drawablePadding="8dp"/>

        <TextView
            android:id="@+id/by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organized by: Berlin Salsacongress Productions"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:layout_gravity="bottom"
            android:drawablePadding="8dp"
            android:paddingLeft="16dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saturday, 07. October 2017 08:00PM"
                android:textSize="12sp"
                android:textColor="#4c4c4c"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:lines="1"
                android:padding="8dp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_timer_black"/>

            <TextView
                android:id="@+id/to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saturday, 07. October 2017 08:00PM"
                android:textSize="12sp"
                android:textColor="#4c4c4c"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:lines="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_timer_off_red"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>